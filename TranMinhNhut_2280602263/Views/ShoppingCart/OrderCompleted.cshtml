@model int
@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container py-5 text-center">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                    <h2 class="mt-3 mb-4">Đặt hàng thành công!</h2>
                    <p class="mb-4">Mã đơn hàng của bạn là: <strong>#@Model</strong></p>
                    <p class="text-muted mb-4">
                        Cảm ơn bạn đã mua hàng. Chúng tôi sẽ xử lý đơn hàng của bạn trong thời gian sớm nhất.
                    </p>
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house me-2"></i>Về trang chủ
                        </a>
                        <a asp-controller="ShoppingCart" asp-action="MyOrders" class="btn btn-outline-primary">
                            <i class="bi bi-bag me-2"></i>Xem đơn hàng của tôi
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
