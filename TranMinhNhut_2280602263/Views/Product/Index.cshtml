@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="products-container">
    <div class="page-header">
        <h2><i class="bi bi-box-seam me-2"></i>Quản lý sản phẩm</h2>
        <p class="text-muted">Quản lý danh sách sản phẩm của bạn</p>
    </div>

    <div class="actions-bar">
        <div class="search-box">
            <form method="get" asp-action="Index" class="search-form">
                <div class="input-group">
                    <input type="text" name="searchQuery" class="form-control"
                           value="@ViewBag.SearchQuery" placeholder="Tìm kiếm sản phẩm..." />
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
        </div>

        <div class="action-buttons">
            <div class="btn-group">
                <a asp-action="Index" asp-route-sortOrder="name_asc"
                   class="btn btn-outline-secondary">
                    <i class="bi bi-sort-alpha-down"></i> Tên A-Z
                </a>
                <a asp-action="Index" asp-route-sortOrder="price_desc"
                   class="btn btn-outline-secondary">
                    <i class="bi bi-sort-numeric-down"></i> Giá
                </a>
            </div>

            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Add" class="btn btn-success">
                    <i class="bi bi-plus-lg"></i> Thêm sản phẩm
                </a>
            }
        </div>
    </div>

    <div class="products-grid">
        @foreach (var product in Model)
        {
            <div class="product-card">
                <div class="product-image">
                    <img src="@product.ImageUrl" alt="@product.Name" />
                </div>
                <div class="product-info">
                    <h3>@product.Name</h3>
                    <p class="price">@product.Price.ToString("#,##0") VND</p>
                    <p class="category">
                        <i class="bi bi-tag"></i>
                        @(!string.IsNullOrWhiteSpace(product.Category?.Name)
                            ? product.Category.Name : "Không có danh mục")
                    </p>
                </div>
                <div class="product-actions">
                    <a asp-action="Display" asp-route-id="@product.Id"
                       class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-eye"></i>
                    </a>
                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                    {
                        <a asp-action="Update" asp-route-id="@product.Id"
                           class="btn btn-outline-warning btn-sm">
                            <i class="bi bi-pencil"></i>
                        </a>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@product.Id"
                           class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>

<style>
    .products-container {
        padding: 30px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    .page-header {
        margin-bottom: 30px;
    }

    .actions-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        gap: 20px;
        flex-wrap: wrap;
    }

    .search-box {
        flex: 1;
        min-width: 300px;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .product-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
        }

    .product-image {
        height: 200px;
        overflow: hidden;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .product-info {
        padding: 15px;
    }

        .product-info h3 {
            margin: 0;
            font-size: 1.1rem;
            color: #2c3e50;
        }

    .price {
        color: #e74c3c;
        font-weight: bold;
        margin: 10px 0;
    }

    .category {
        color: #7f8c8d;
        font-size: 0.9rem;
        margin: 0;
    }

    .product-actions {
        padding: 15px;
        background: #f8f9fa;
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .btn-sm {
        padding: 5px 10px;
    }
</style>

@section Scripts {
    <script>
        // Add any required JavaScript here
    </script>
}
